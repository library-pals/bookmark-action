{
  "name": "bookmark-action",
  "version": "5.2.0",
  "description": "Save website metadata to a JSON file.",
  "main": "dist/index.js",
  "scripts": {
    "pretest": "eslint . --ext .js,.ts",
    "test": "jest --coverage",
    "build": "ncc build src/index.ts",
    "pretty-quick": "pretty-quick",
    "prepare": "husky install"
  },
  "author": "Katy DeCorah",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "open-graph-scraper": "^5.0.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "@vercel/ncc": "^0.36.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.2.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/katydecorah/bookmark-action.git"
  },
  "bugs": {
    "url": "https://github.com/katydecorah/bookmark-action/issues"
  },
  "homepage": "https://github.com/katydecorah/bookmark-action#readme",
  "jest": {
    "resetMocks": true,
    "moduleNameMapper": {
      "^./utils.js$": "<rootDir>/src/utils.ts"
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
