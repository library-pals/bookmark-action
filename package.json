{
  "name": "bookmark-action",
  "version": "5.0.0",
  "description": "Save website metadata to a JSON file.",
  "main": "dist/index.js",
  "scripts": {
    "pretest": "eslint . --ext .js,.ts",
    "test": "jest --coverage",
    "build": "ncc build src/index.ts",
    "pretty-quick": "pretty-quick",
    "prepare": "husky install"
  },
  "author": "Katy DeCorah",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/github": "^5.0.3",
    "open-graph-scraper": "^4.11.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.18",
    "@types/open-graph-scraper": "^4.8.1",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.0.4",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/katydecorah/bookmark-action.git"
  },
  "bugs": {
    "url": "https://github.com/katydecorah/bookmark-action/issues"
  },
  "homepage": "https://github.com/katydecorah/bookmark-action#readme",
  "jest": {
    "resetMocks": true,
    "moduleNameMapper": {
      "^./utils.js$": "<rootDir>/src/utils.ts"
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
